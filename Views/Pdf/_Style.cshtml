<style>
    * {
        box-sizing: border-box;
    }

    @@page {
        size: A4;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: "Roboto", "Gill Sans", "Gill Sans MT", Calibri,
            "Trebuchet MS", 'sans-serif';
    }

    .page:after {
        content: counter(page);
    }

    table {
        width: 100%;
        border: 1px solid #555;
        margin: 0;
    }

    .tabela th,
    .tabela td {
        border: none;
    }

    nav,
    footer,
    video,
    audio,
    object,
    embed {
        display: none;
    }

    #main-content img {
        width: 99% !important;
        height: auto !important;
        max-height: 21cm !important;
        margin: 0 auto;
        padding: 0;
        display: block;
        page-break-after: avoid;
        page-break-before: avoid;
        break-after: avoid;
        break-before: avoid;
        break-inside: avoid;
        object-fit: contain;
    }

    .bPage {
        page-break-before: always !important;
        break-before: always !important;
    }


    .cinza {
        color: #c5c5c5;
    }

    .cabecalho {
        padding: 0px;
        border-collapse: collapse;
    }

    .cabecalho td {
        border-right: 1px solid #555;
        text-align: center;
    }

    .cabecalho td:last-child {
        border-right: none;
        text-align: center;
    }

    .info-header {
        padding: 0;
    }

    .info-header table,
    .info-header tr,
    .info-header td {
        border: none;
    }

    .info-header .paginas,
    .info-header .codigo {
        border: none;
        justify-content: center;
        align-items: center;
    }

    .info-header .codigo {
        border-bottom: 1px solid #555;
    }

    .border-collapse {
        border-collapse: collapse;
    }

    .text-center,
    figcaption {
        text-align: center;
    }

    .field-item.form .field-item {
        counter-increment: fielditem;
    }

    .field-item.form .field-item .field-item-title::before {
        content: counters(fielditem, ".") " ";
    }

    .field-item-children {
        counter-reset: fielditem;
    }

    .field-item-title {
        font-weight: bold;
        margin: 16px 0;
    }

    .field-item.form .field-item .field-item-children {
        margin: 0 32px 48px;
    }

    .content table {
        border-collapse: collapse;
    }

    .content table th,
    .content table td {
        border: solid 1px #333;
    }
</style>